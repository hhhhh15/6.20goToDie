<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 -->
    <item android:bottom="3.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FDA22C" /> <!-- 阴影颜色 -->
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- 主按钮层 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#FAE17D"
                android:endColor="#FED563" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>
